{
  "name": "zwave2mqtt",
  "version": "3.2.1",
  "bin": "bin/www",
  "description": "Zwave To MQTT Gateway",
  "author": "Daniel Lando <daniel.sorridi@gmail.com>",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/OpenZWave/Zwave2Mqtt"
  },
  "bugs": {
    "url": "https://github.com/OpenZWave/Zwave2Mqtt/issues"
  },
  "keywords": [
    "mqtt",
    "zwave",
    "openzwave",
    "open-zwave",
    "control-panel",
    "gateway",
    "hass",
    "homeassistant",
    "iot",
    "nodejs",
    "vue",
    "vuetify"
  ],
  "pkg": {
    "scripts": [
      "lib/**/*.js",
      "config/**/*.js",
      "hass/**/*.js",
      "app.js"
    ],
    "assets": [
      "views/**/*",
      "static/**/*",
      "dist/**/*"
    ]
  },
  "scripts": {
    "dev": "webpack-dev-server --inline --progress --host 0.0.0.0 --config build/webpack.dev.conf.js",
    "dev:server": "nodemon bin/www",
    "start": "node bin/www",
    "lint": "eslint --ext .js,.vue .",
    "lint-fix": "eslint --fix --ext .js,.vue .",
    "test": "mocha",
    "coverage": "c8 --clean mocha",
    "record-coverage": "c8 report --reporter=text-lcov --all --exclude=test/* --exclude=.git --exclude=.eslintrc.js --exclude=.postcssrc.js --exclude=wallaby.js > ./coverage/lcov.info",
    "test-watch-cover": "nodemon --exec c8 npm test",
    "test-watch": "nodemon --exec npm test",
    "build": "node build/build.js",
    "pkg": "sudo chmod +x package.sh && ./package.sh",
    "changelog": "auto-changelog -p && git add CHANGELOG.md",
    "release": "read -p 'GITHUB_TOKEN: ' GITHUB_TOKEN && export GITHUB_TOKEN=$GITHUB_TOKEN && release-it"
  },
  "release-it": {
    "github": {
      "release": true,
      "assets": [
        "pkg/*.zip"
      ]
    },
    "git": {
      "tagName": "v${version}"
    },
    "hooks": {
      "after:bump": "npm run changelog",
      "before:release": "./package.sh --release"
    },
    "npm": {
      "publish": false
    }
  },
  "auto-changelog": {
    "unreleased": true,
    "commitLimit": false,
    "replaceText": {
      "^-[\\s]*": ""
    }
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "ansi_up": "^4.0.4",
    "app-root-path": "^3.0.0",
    "axios": "^0.19.2",
    "axios-progress-bar": "^1.2.0",
    "bluebird": "^3.7.2",
    "body-parser": "~1.19.0",
    "connect-history-api-fallback": "^1.6.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "express": "^4.17.1",
    "jsonfile": "^6.0.1",
    "morgan": "~1.10.0",
    "mqtt": "^4.1.0",
    "mqtt-nedb-store": "^0.1.1",
    "native-url": "^0.3.1",
    "nedb": "^1.8.0",
    "openzwave-shared": "^1.7.0",
    "serialport": "^9.0.0",
    "serve-favicon": "^2.5.0",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "tail": "^2.0.3",
    "uniqid": "^5.2.0",
    "vue": "^2.6.11",
    "vue-d3-network": "^0.1.28",
    "vue-router": "^3.2.0",
    "vuetify": "^2.2.29",
    "vuex": "^3.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-decorators": "^7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-proposal-function-sent": "^7.0.0",
    "@babel/plugin-proposal-json-strings": "^7.0.0",
