{
  "name": "zwave2mqtt",
  "version": "3.0.3",
  "bin": "bin/www",
  "description": "Zwave To MQTT Gateway",
  "author": "Daniel Lando <daniel.sorridi@gmail.com>",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/OpenZWave/Zwave2Mqtt"
  },
  "bugs": {
    "url": "https://github.com/OpenZWave/Zwave2Mqtt/issues"
  },
  "keywords": [
    "mqtt",
    "zwave",
    "openzwave",
    "open-zwave",
    "control-panel",
    "gateway",
    "hass",
    "homeassistant",
    "iot",
    "nodejs",
    "vue",
    "vuetify"
  ],
  "pkg": {
    "scripts": [
      "lib/**/*.js",
      "config/**/*.js",
      "hass/**/*.js",
      "app.js"
    ],
    "assets": [
      "views/**/*",
      "static/**/*",
      "dist/**/*"
    ]
  },
  "scripts": {
    "dev": "webpack-dev-server --inline --progress --host 0.0.0.0 --config build/webpack.dev.conf.js",
    "dev:server": "nodemon bin/www",
    "start": "node bin/www",
    "lint": "eslint --ext .js,.vue .",
    "test": "mocha",
    "build": "node build/build.js",
    "pkg": "sudo chmod +x package.sh && ./package.sh",
    "changelog": "auto-changelog -p && git add CHANGELOG.md",
    "release": "read -p 'GITHUB_TOKEN: ' GITHUB_TOKEN && export GITHUB_TOKEN=$GITHUB_TOKEN && release-it"
  },
  "release-it": {
    "github": {
      "release": true,
      "assets": [
        "pkg/*.zip"
      ]
    },
    "git": {
      "tagName": "v${version}"
    },
    "hooks": {
      "after:bump": "npm run changelog",
      "before:release": "./package.sh --release"
    },
    "npm": {
      "publish": false
    }
  },
  "auto-changelog": {
    "unreleased": true,
    "commitLimit": false,
    "replaceText": {
      "^-[\\s]*": ""
    }
  },
  "dependencies": {
    "ansi_up": "^3.0.0",
    "app-root-path": "^2.2.1",
    "axios": "^0.19.2",
    "axios-progress-bar": "^1.2.0",
    "babel-polyfill": "^6.26.0",
    "bluebird": "^3.7.2",
    "body-parser": "~1.18.2",
    "connect-history-api-fallback": "^1.6.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.4",
    "debug": "^4.1.1",
    "express": "^4.17.1",
    "jsonfile": "^4.0.0",
    "morgan": "~1.9.0",
    "mqtt": "^2.15.1",
    "mqtt-nedb-store": "^0.1.1",
    "nedb": "^1.8.0",
    "openzwave-shared": "^1.6.2",
    "serialport": "^8.0.7",
    "serve-favicon": "^2.4.5",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "tail": "^2.0.3",
    "uniqid": "^4.1.1",
    "vue": "^2.6.11",
    "vue-d3-network": "^0.1.28",
    "vue-router": "^3.1.6",
    "vuetify": "^1.5.24",
    "vuex": "^3.1.3"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel-core": "^6.22.1",
    "babel-eslint": "^8.2.1",
    "babel-helper-vue-jsx-merge-props": "^2.0.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-plugin-transform-vue-jsx": "^3.5.0",
    "babel-preset-env": "^1.3.2",
    "babel-preset-stage-2": "^6.22.0",
    "chai": "^4.2.0",
    "chalk": "^2.0.1",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^3.4.2",
    "eslint": "^4.15.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-plugin-vue": "^4.0.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^1.1.4",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^2.30.1",
    "mocha": "^7.1.1",
    "node-notifier": "^5.4.3",
    "optimize-css-assets-webpack-plugin": "^3.2.1",
    "ora": "^1.2.0",
    "portfinder": "^1.0.25",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.0.8",
    "postcss-url": "^7.2.1",
    "rimraf": "^2.7.1",
    "semver": "^5.7.1",
    "shelljs": "^0.7.6",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "uglifyjs-webpack-plugin": "^1.1.1",
    "url-loader": "^4.0.0",
    "vue-loader": "^13.3.0",
    "vue-style-loader": "^3.0.1",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^3.6.0",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-dev-server": "^2.11.5",
    "webpack-merge": "^4.2.2"
  },
  "engines": {
    "node": ">= 6.0.0",
    "npm": ">= 3.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
